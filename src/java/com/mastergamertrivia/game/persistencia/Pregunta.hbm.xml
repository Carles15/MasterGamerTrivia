<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
  "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
  "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

    <class name="com.mastergamertrivia.game.dominio.Pregunta" table="pregunta">
        <id column="id" name="id" type="integer">
            <generator class="increment"></generator>
        </id>
        <property name="enunciado"/>
        <property name="respuestaFalsa1"/>
        <property name="respuestaFalsa2"/>
        <property name="respuestaFalsa3"/>
        <property name="respuestaCorrecta"/>
        <property name="juegoPertenece"/>
        <property name="idDificultad"/>
    </class>

</hibernate-mapping>